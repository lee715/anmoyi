<form class="form-horizontal" >
  <% if(places){ %>
  <div class="form-group">
    <label for="_placeId" class="col-sm-2 control-label">场地方</label>
    <div class="col-sm-10">
      <select class="form-control" name="_placeId">
        <% for(var i=0,len=places.length;i<len;i++){ %>
        <option value=<%=places[i]._id%> <%if(_placeId == places[i]._id){%>selected<%}%>><%=places[i].name%></option>
        <% } %>
      </select>
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">设备名称</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" value=<%= name||'' %>>
    </div>
  </div>
  <div class="form-group">
    <label for="uid" class="col-sm-2 control-label">设备编号</label>
    <div class="col-sm-10">
      <input type="text" name="uid" class="form-control" value=<%= uid||'' %>>
    </div>
  </div>
  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">价格</label>
    <div class="col-sm-10">
      <input type="text" name="price" class="form-control" placeholder="如10，10元" value=<%=price || ''%>>
    </div>
  </div>
  <div class="form-group">
    <label for="time" class="col-sm-2 control-label">服务时间</label>
    <div class="col-sm-10">
      <input type="text" name="time" class="form-control" placeholder="如8，10分钟" value=<%=time || ''%>>
    </div>
  </div>
  <div class="form-group">
    <label for="discount" class="col-sm-2 control-label">折扣</label>
    <div class="col-sm-10">
      <input type="text" name="discount" class="form-control" placeholder="0-100, 0代表免费，90代表9折" value=<%= discount|| 100%>>
    </div>
  </div>
  <div class="form-group">
    <label for="remission" class="col-sm-2 control-label">优惠</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="remission" placeholder="正数代表优惠，负数代表加价,如 1代表便宜1元" value=<%= remission||0 %>>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">提交</button>
    </div>
  </div>
</form>