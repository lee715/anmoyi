<form class="form-horizontal" >
  <% if(users){ %>
  <div class="form-group">
    <label for="user" class="col-sm-2 control-label">代理商</label>
    <div class="col-sm-10">
      <select class="form-control" name="_userId">
        <% for(var i=0,len=users.length;i<len;i++){ %>
        <option value=<%=users[i]._id%> <%if(_userId == users[i]._id){%>selected<%}%>><%=users[i].name%></option>
        <% } %>
      </select>
    </div>
  </div>
  <% } %>
  <div class="form-group">
    <label for="location" class="col-sm-2 control-label">设备编号</label>
    <div class="col-sm-10">
      <input type="text" name="uid" class="form-control" value=<%= uid||'' %>>
    </div>
  </div>
  <div class="form-group">
    <label for="location" class="col-sm-2 control-label">地理位置</label>
    <div class="col-sm-10">
      <div id="distpicker" data-toggle="distpicker">
        <div class="form-group col-sm-2">
          <select name="province" class="form-control" data-province=<%=locs && locs[0] || "---- 选择省 ----"%>></select>
        </div>
        <div class="form-group col-sm-2" style="margin-left:10px">
          <select name="city" class="form-control" data-city=<%locs&&locs[1] || "---- 选择市 ----"%>></select>
        </div>
        <div class="form-group col-sm-2" style="margin-left:10px">
          <select name="district" class="form-control" data-district=<%=locs && locs[2] || "---- 选择区 ----"%>></select>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="place" class="col-sm-2 control-label">场所</label>
    <div class="col-sm-10">
      <input type="text" name="place" class="form-control" placeholder="场所，如XX电影院" value=<%= place||''%>>
    </div>
  </div>
  <div class="form-group">
    <label for="place" class="col-sm-2 control-label">价格/分钟</label>
    <div class="col-sm-10">
      <input type="text" name="price" class="form-control" placeholder="如10/8，10元八分钟" value=<%=price || ''%>>
    </div>
  </div>
  <div class="form-group">
    <label for="place" class="col-sm-2 control-label">折扣</label>
    <div class="col-sm-10">
      <input type="text" name="discount" class="form-control" placeholder="0-100, 0代表免费，90代表9折" value=<%= discount|| 100%>>
    </div>
  </div>
  <div class="form-group">
    <label for="place" class="col-sm-2 control-label">优惠</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="remission" placeholder="正数代表优惠，负数代表加价,如 1代表便宜1元" value=<%= remission||0 %>>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">提交</button>
    </div>
  </div>
</form>