<form class="form-horizontal" >
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">用户名</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" placeholder="用户名" value=<%= name||'' %>>
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">邮箱</label>
    <div class="col-sm-10">
      <input type="text" name="email" class="form-control" placeholder="邮箱" value=<%=email || ''%>>
    </div>
  </div>
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label">手机</label>
    <div class="col-sm-10">
      <input type="text" name="phone" class="form-control" placeholder="手机" value=<%= phone|| ''%>>
    </div>
  </div>
  <%if(type == 'create'){%>
  <div class="form-group">
    <label for="role" class="col-sm-2 control-label">权限</label>
    <div class="col-sm-10">
      <select class="form-control" name="role">
        <% for(var i=0,l=roles.length;i<l;i++){ %>
          <option value=<%=roles[i]%> <%if(role && role == roles[i]){%>selected<%}%>><%=roles[i]%></option>
        <% } %>
      </select>
    </div>
  </div>
  <%}%>
  <div id="createUserAddition" <%if(!(type == 'edit' && role == 'agent')){%>class="hide"<%}%>>
    <div class="form-group">
      <label for="company" class="col-sm-2 control-label">公司</label>
      <div class="col-sm-10">
        <input type="text" name="company" class="form-control" placeholder="公司" value=<%= company||''%>>
      </div>
    </div>
    <div class="form-group">
      <label for="location" class="col-sm-2 control-label">地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="location" placeholder="地址" value=<%= location|| '' %>>
      </div>
    </div>
    <div class="form-group">
      <label for="mailAddress" class="col-sm-2 control-label">邮寄地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="mailAddress" placeholder="邮寄地址" value=<%= mailAddress|| '' %>>
      </div>
    </div>
    <div class="form-group">
      <label for="qq" class="col-sm-2 control-label">QQ</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="qq" placeholder="qq" value=<%= qq|| '' %>>
      </div>
    </div>
    <div class="form-group">
      <label for="bankName" class="col-sm-2 control-label">银行</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="bankName" placeholder="银行" value=<%= bankName|| '' %>>
      </div>
    </div>
    <div class="form-group">
      <label for="bankAccount" class="col-sm-2 control-label">卡号</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="bankAccount" placeholder="卡号" value=<%= bankAccount|| '' %>>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">提交</button>
    </div>
  </div>
</form>